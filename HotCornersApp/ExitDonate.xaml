<Window x:Class="HotCornersApp.ExitDonate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotCornersApp"
        mc:Ignorable="d"
        Title="HotCornersApp" Width="450" Height="250"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="25,35,0,0" VerticalAlignment="Top" Width="100" Source="Resources/ExposeIcon.png"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="163,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" Width="209" FontSize="16"><Run FontWeight="Bold" Text="Do you want to Donate ?"/><LineBreak/><LineBreak/></TextBlock>
        <Button x:Name="button" Content="OK" HorizontalAlignment="Left" Margin="181,163,0,0" VerticalAlignment="Top" Width="125" Height="30" Click="appClose" />
        <TextBlock Margin="163,106,50,77" FontSize="18.667"><Hyperlink NavigateUri="https://sites.google.com/site/bytecar/please-visit-again" RequestNavigate="Hyperlink_RequestNavigateDonate"><Run Text="Donate and Support Us!"/></Hyperlink></TextBlock>
        <CheckBox x:Name="checkBox" Content="Do not prompt again!" Margin="192,66,45,133"/>
    </Grid>
</Window>
